" my vimrc file 

" select a colorscheme
colorscheme evening 

" fix the stupid tabs
set expandtab
set smarttab
set ts=2
set shiftwidth=2

" turn colors on
syntax on

" line number config
highlight LineNr ctermfg=grey
set number

" allow 'hard' backspace in insert mode
set backspace=indent,eol,start 
